{
  "name": "npm-automation-env",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "validate-html": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true,
      "legacyWatch": true
    },
    "stylelint": {
      "patterns": [
        "src"
      ],
      "extensions": "css"
    },
    "jshint": "src/"
  },
  "scripts": {
    "server": "live-server src",
    "validate-html": "html-validate src",
    "stylelint": "stylelint src/**/*.css",
    "jshint": "jshint src/",
    "watch": "npm-watch",
    "dev-mode": "npm-run-all --parallel server watch",
    "postinstall": "npm i -g live-server html-validate jshint",
    "run-webpack": "webpack --mode production",
    "build": "npm-run-all validate-html jshint stylelint run-webpack"
  },
  "browserslist": "> 0.25%, not dead",
  "author": "Kalagin Ivan",
  "license": "ISC",
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "style-loader": "^1.1.3",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "terser-webpack-plugin": "^2.3.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {}
}
